- page_title 'Question Index'

%table.striped
  %thead
    %tr
      %th Question Name
      %th Enabled
      %th
  %tbody
    - @questions.each do |question|
      %tr{:class => cycle('even', 'odd')}
        %td
          = link_to admin_question_path(question) do
            #{question.number}. #{question.text}
        %td= question.enabled
        %td
          = link_to 'Edit', edit_admin_question_path(question)
          = link_to 'Delete', admin_question_path(question), :data => { :confirm => 'Are you sure?' }, :method => :delete

#actions
  = link_to 'New Question', new_admin_question_path, :class => 'fugue fugue-plus'
