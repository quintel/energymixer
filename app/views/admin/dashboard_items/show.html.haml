- page_title "Dashboard Item"

%dl.admin
  %dt Label
  %dd= @dashboard_item.label
  %dt GQuery
  %dd= @dashboard_item.gquery
  %dt Ordering
  %dd= @dashboard_item.ordering
  %dt Steps
  %dd= @dashboard_item.steps

#actions
  = link_to 'Edit', edit_admin_dashboard_item_path(@dashboard_item), :class => 'fugue fugue-pencil'
  = link_to 'Back', admin_dashboard_items_path
  = link_to 'Destroy', admin_dashboard_item_path(@dashboard_item), :method => :delete, :confirm => 'Are you sure?',  :class => 'fugue fugue-cross'
