- page_title "Dashboard Items"

%table.striped
  %thead
    %tr
      %th Label
      %th GQuery
      %th Steps
      %th
      %th
      %th
  %tbody
    - @dashboard_items.each do |d|
      %tr{:class => cycle('even', 'odd')}
        %td= link_to d.label, admin_dashboard_item_path(d)
        %td= d.gquery
        %td= d.steps
        %td= link_to 'Show', admin_dashboard_item_path(d)
        %td= link_to 'Edit', edit_admin_dashboard_item_path(d)
        %td= link_to 'Delete', admin_dashboard_item_path(d), :data => { :confirm => 'Are you sure?' }, :method => :delete

#actions
  = link_to 'New Dashboard Item', new_admin_dashboard_item_path
