!!! 5
%html
  %head
    %title EnergyMixer
    = stylesheet_link_tag '960'
    = stylesheet_link_tag 'all', 'colorbox'
    = javascript_include_tag :defaults
    = javascript_include_tag 'ie'
    = javascript_include_tag 'jquery.colorbox-min'
    = csrf_meta_tag
    = yield :head
  %body{:id => "#{controller.controller_name}_#{controller.action_name}", 
        :class => controller.controller_name}
    .container_12
      %header
        %nav
          = link_to 'Home', root_path
          \::
          = link_to 'Scenarios', scenarios_path
          \::
          = link_to 'Admin', admin_questions_path
      - flash.each do |k,msg|
        .flash{:id => k}
          = msg
      #content
        = yield
