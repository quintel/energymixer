!!! 5
%html
  %head
    %title EnergyMixer
    = stylesheet_link_tag 'all'
    = javascript_include_tag :defaults
    = javascript_include_tag 'radio_buttons'
    = csrf_meta_tag
    = yield :head
  %body{:id => "#{controller.controller_name}_#{controller.action_name}", 
        :class => controller.controller_name}
    %header
      %h1 Energy Mixer
      %nav
        = link_to 'Home', root_path
        = link_to 'Questions', questions_path
    - flash.each do |k,msg|
      .flash{:id => k}
        = msg
    #content
      = yield
