!!! 5
%html
  %head
    %title= t(APP_CONFIG['app_name'])
    = stylesheet_link_tag 'application' # Use something different for theming
    = stylesheet_link_tag 'vendor/colorbox'
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.colorbox-min', 'console', 'popups'
    - unless APP_CONFIG["standalone"]
      = airbrake_javascript_notifier
      = javascript_include_tag 'google_analytics'
    /[if lt IE 9]
      = javascript_include_tag "html5", "ie"
    = csrf_meta_tag
    = yield :head
    = render "layouts/javascript_unselectable"
  %body{:id => "#{controller.controller_name}_#{controller.action_name}", :class => controller.controller_name}
    #content
      = yield
  %footer
    = link_to_unless APP_CONFIG["standalone"], "http://www.energietransitiemodel.nl/", :target => "_blank" do
      De #{t(APP_CONFIG['app_name'])} is gebaseerd op het Energietransitiemodel