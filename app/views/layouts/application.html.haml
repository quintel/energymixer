!!! 5
%html
  %head
    %title EnergyMixer
    - current_style = '/stylesheets/flat/'
    = stylesheet_link_tag ['reset','application', 'pages','scenarios','stack', 'dashboard','colorbox'].map{|link| current_style + link}
    = hoptoad_javascript_notifier
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.colorbox-min', 'console', 'google_analytics', 'popups'
    /[if lt IE 9]
      = javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js", "ie"
    = csrf_meta_tag
    = yield :head
    = render "layouts/javascript_unselectable"
  %body{:id => "#{controller.controller_name}_#{controller.action_name}", :class => controller.controller_name}
    #content
      = yield
  %footer
    = link_to "http://www.energietransitiemodel.nl/", :target => "_blank" do
      De Future Energy Mixer is gebaseerd op het energietransitiemodel
