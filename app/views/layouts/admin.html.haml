!!! 5
%html
  %head
    %title Admin | EnergyMixer
    = stylesheet_link_tag "admin", "formtastic", "formtastic_changes"
    = stylesheet_link_tag "fugue-sprite/fugue-sprite"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield :head
  %body{:id => "#{controller_name}_#{controller.action_name}", 
        :class => [controller_name, "admin"]}
    %header
      %h1 Energy Mixer > Admin
      %nav
        = link_to 'Frontend', root_path
        = link_to 'Questions', questions_path, :class => ('active' if controller_name == 'questions')
        = link_to 'Popups', popups_path, :class => ('active' if controller_name == 'popups')
        = link_to 'Dashboard Items', dashboard_items_path, :class => ('active' if controller_name == 'dashboard_items')
        = link_to 'User Scenarios', user_scenarios_path, :class => ('active' if controller_name == 'user_scenarios')
        .login_box
          - if user_signed_in?
            Logged in as
            = current_user.email
            = link_to 'Sign out', destroy_user_session_path
    - flash.each do |k,msg|
      .flash{:id => k}
        = msg
    #content
      = yield
