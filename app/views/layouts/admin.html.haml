!!! 5
%html
  %head
    %title Admin | EnergyMixer
    = stylesheet_link_tag "admin", "formtastic", "formtastic_changes"
    = stylesheet_link_tag "fugue-sprite/fugue-sprite"
    = stylesheet_link_tag "ui-lightness/jquery-ui-1.8.15.custom"
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery-ui.min'
    = csrf_meta_tag
    = yield :head
  %body{:id => "#{controller_name}_#{controller.action_name}", 
        :class => [controller_name, "admin"]}
    %header
      %nav
        %h1
          = link_to 'EnergyMixer / Admin', admin_root_path
        = link_to 'Frontend', root_path
        = link_to 'Questions', admin_questions_path, :class => ('active' if controller_name == 'questions')
        = link_to 'Popups', admin_popups_path, :class => ('active' if controller_name == 'popups')
        = link_to 'Dashboard Items', admin_dashboard_items_path, :class => ('active' if controller_name == 'dashboard_items')
        = link_to 'User Scenarios', admin_scenarios_path, :class => ('active' if controller_name == 'scenarios')
        = link_to 'Translations', admin_translations_path, :class => ('active' if controller_name == 'translations')
        .login_box
          - if user_signed_in?
            Logged in as
            = current_user.email
            = link_to 'Sign out', destroy_user_session_path
    - flash.each do |k,msg|
      .flash{:id => k}
        = msg
    #content
      = yield
