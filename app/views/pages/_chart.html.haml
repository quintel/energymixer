- max_height = 360
.charts_container
  .legend
    %h4 Legenda
    %table
      - scenario.carrier_ratios.each_pair do |sector, value|
        %tr{:class => [sector, "costs_share_of_#{sector}"]}
          %td= image_tag "layout/textures/#{sector}.png"
          %td= t(sector)
          %td.value= number_to_percentage(value * 100, :precision => 0)
  .chart_canvas_mix
    %ul.chart
      - scenario.carrier_ratios.each_pair do |sector, value|
        - height = (value * max_height).round
        %li.serie{:class => [sector, Scenario::PrimaryMixTable[sector]], :style => "height: #{height}px", :title => I18n.t(sector)}
  = render 'scenarios/renewables_float', :scenario => scenario
