<p id="notice"><%= notice %></p>

<p>
  <b>Question:</b>
  <%= @question.question %>
</p>

<p>
  <b>Order:</b>
  <%= @question.order %>
</p>

<p>
  <b>Answers:</b>
  <ol>
    <%- @question.answers.each do |answer| %>
    <li><%= answer.answer %></li>
    <% end %>
  </ol>
</p>



