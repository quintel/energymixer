    = f.input :output_2, :hint => label_for_output(:output_2)
    = f.input :output_3, :hint => label_for_output(:output_3)
    = f.input :output_4, :hint => label_for_output(:output_4)
    = f.input :output_5, :hint => label_for_output(:output_5)
    = f.input :output_6, :hint => label_for_output(:output_6)
    = f.input :output_7, :hint => label_for_output(:output_7)
    = f.input :output_8, :hint => label_for_output(:output_8)
    = f.input :featured
  = f.buttons
    
