%h2 Answer details

%p
  %b Answer:
  = @answer.answer
%p
  %b Order:
  = @answer.ordering
%p
  %b Question:
  = @answer.question_id

%h2 Inputs
%dl
  - @answer.inputs.each do |i|
    %dt= i.key
    %dd= i.value

#actions
  = link_to 'Edit', edit_answer_path(@answer)
  = link_to 'Back', question_path(@answer.question)
