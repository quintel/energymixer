$("#selectable .scenarios").html("<%= escape_javascript(render :partial => 'select_scenario_box', 
                                :collection => @scenarios, 
                                :as => :scenario)%>")
$("#selectable #pagination").html("<%= escape_javascript(paginate(@scenarios, :remote => true).to_s) %>");
$("#selected .scenarios .scenario").each(function(){
  var scenario_id = $(this).data("scenario_id");
  $("#selectable .scenarios .scenario[data-scenario_id="+scenario_id+"]").hide();
});
