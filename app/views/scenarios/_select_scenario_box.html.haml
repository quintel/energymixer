.scenario.shaded_gradient{:class => scenario.featured? ? 'featured' : '', :'data-scenario_id' => scenario.id }
  .image
    = image_tag 'graph_icon.png'
  .actions
    .show
      = link_to 'Bekijk', scenario_path(scenario), :class => "shell"
    .compare
      = check_box_tag 'ids[]', scenario.id
      Vergelijk
  .remove_from_list
    = link_to image_tag('icons/close.png'), '#'
  .name
    = link_to scenario_path(scenario) do
      = scenario.name
      = " - #{truncate scenario.title, :length => 60}" if scenario.title && !scenario.current_scenario?
  .date
    #{time_ago_in_words(scenario.created_at)} geleden aangemaakt
