%section#breadcrumbs
  %nav
    = link_to "Home", root_path
    >
    = link_to "Bekijk de Mixes van anderen", scenarios_path
    >
    Vergelijk

= render :partial => 'search_scenario_box'

- if @scenarios.empty?
  Please select some scenarios first
- else
  - @scenarios.each do |s|
    .scenario
      .name= s.name
      = render :partial => 'scenarios/graphs/compare_static', :locals => { :scenario => s }
    .spacer
  .current_scenario
    .name Mix 2011
    = render :partial => 'scenarios/graphs/compare_shaded', :locals => { :scenario => Scenario.current }

- content_for :head do
  = stylesheet_link_tag 'mixer.graph'
  = stylesheet_link_tag 'scenarios'