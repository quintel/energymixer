%h2 Existing scenarios
= form_tag scenarios_path, :method => :get do
  Search
  = text_field_tag :q
  = submit_tag "Search"

= form_tag compare_scenarios_path do
  - @scenarios.each do |s|
    .scenario{:class => s.featured? ? 'featured' : '' }
      .actions
        = link_to 'show', scenario_path(s)
        %br
        = check_box_tag 'ids[]', s.id
        Compare
      .name= s.name
      - if s.age
        .age #{s.age} jaar
      
  = submit_tag "Compare"

= paginate @scenarios


- content_for :head do
  = stylesheet_link_tag 'scenarios'