%nav#up
  %table
    %tr
      - Question.ordered.each do |question|
        %td.question_tab{:'data-question_id' => question.number}=question.number
%div.questions
  = form_for @scenario, :url => scenarios_path, :validate => true, :html => { :method => :post } do |scenario|
    = scenario.fields_for :answers do |answer|
      = render 'question', :answer => answer
    = render 'user_details', :scenario => scenario

#admin_menu
  -if params[:test]
    %h2 TEST MENU
    - Question.ordered.each do |question|
      %a.question_tab{:href  => "#", :'data-question_id' => question.number}
        =question.number
    - last_question_number = Question.count + 1
    %a.question_tab{:href  => "#",:'data-question_id' => last_question_number}Submit