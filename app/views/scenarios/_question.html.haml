- question_object = answer.object.question
.question{:id=>"question_#{question_object.number}"}
  .number
    = question_object.number
  .question_text
    = raw question_object.question
  .information
    = link_to_function 'Lees meer', '#', :class => 'text_toggler'
    .text{:style => 'display: none'}
      = markdown(question_object.information)
  %ol.answers
    - question_object.answers.each do |a|
      %li.answer{:class => ('active' if answer.object.answer_id == a.id)}
        = answer.hidden_field :question_id
        = answer.radio_button :answer_id, a.id, 
                              :id  => "answer_#{a.id}",
                              :'data-question_id' => question_object.id
        %label{:for => "answer_#{a.id}", :id => "label_#{a.id}"}
          .text
            = raw a.answer
