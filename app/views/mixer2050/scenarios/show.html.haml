= render 'scenario_text'

%section#breadcrumbs
  %nav
    = link_to "Home", root_path
    >
    = link_to "Bekijk de Mixes van anderen", scenarios_path
    >
    = @scenario.name


%section#left
  = render 'search_scenario_box'
  %section#description
    - unless @scenario.title.blank?
      .title
        %h1{:style=>"font-size:1.2em;"}= "'#{@scenario.title}'"
    .name
      De mix van #{@scenario.name}
      - if @scenario.age
        (#{@scenario.age} jaar)
    .content
      = full_text(@scenario)

%section#right.graph
  .text
    = link_to 'Vergelijk verschillende mixen met elkaar', scenarios_path, :class => 'shell'
  .charts
    .left
      = render 'full_chart', :scenario => @scenario
    .right
      .current.graph_shaded
        .header Energy Mix 2011
        .subheader &euro;XXX Miljard
        = render 'scenarios/chart', :scenario => Scenario.current, :width => 50

